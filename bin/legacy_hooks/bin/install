#!/bin/bash

set -eux


# Create the directories needed by license-manager
mkdir -p $SNAP_COMMON/license_manager/{config,log}
chmod -R 777 $SNAP_COMMON/license_manager/log

# Copy the example license agent/server config to the license_manager config file locations.
cp $SNAP/config/* "$SNAP_COMMON/license_manager/config/"

# Initialize the snap_mode
echo "none" > "$SNAP_COMMON/snap_mode.txt"
